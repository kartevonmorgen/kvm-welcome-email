{
  "name": "kvm-welcome-email",
  "version": "0.0.1",
  "private": true,
  "author": "Magnus Herold",
  "scripts": {
    "build": "spago build",
    "test": "rm data/tmp/* ; spago test",
    "serve": "parcel dev/index.html",
    "css-build": "node-sass --omit-source-map-url dev/bulma-cfg.scss dev/bulma-cfg.css",
    "css-watch": "npm run css-build -- --watch",
    "build-prod": "mkdir -p prod && cp dev/index.html dev/bulma-cfg.css prod/ && rm -rf dist && spago bundle-app -m KvmMail.App.Main --to prod/index.js && parcel build prod/index.html --no-scope-hoist --no-source-maps"
  },
  "dependencies": {
    "@turf/turf": "^6.5.0",
    "cors": "^2.8.5",
    "date-fns": "^2.22.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "marked": "^2.0.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "winston": "^3.3.3",
    "xhr2": "^0.2.1"
  },
  "devDependencies": {
    "bulma": "^0.9.2",
    "node-sass": "^6.0.1",
    "parcel": "^2.0.0-beta.3.1"
  }
}
